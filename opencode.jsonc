        "qwen-coder": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Qwen Code",
            "options": {
                "baseURL": "http://localhost:6589/v1",
            },
            "models": {
                "qwen3-coder-plus": {
                    "name": "Qwen 3 Coder",
                },
            },
        },
        "gpt-5-f": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "GPT-5 Fast",
            "options": {
                "baseURL": "http://localhost:8089/v1",
            },
            "models": {
                "gpt-5-codex": {
                    "name": "GPT-5 Fast",
                    "options": {
                        "reasoningEffort": "low",
                        "reasoningSummary": "none",
                    },
                },
            },
        },
        "gpt-5-b": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "GPT-5 Balanced",
            "options": {
                "baseURL": "http://localhost:8089/v1",
            },
            "models": {
                "gpt-5-codex": {
                    "name": "GPT-5 Balanced",
                    "options": {
                        "reasoningEffort": "medium",
                        "reasoningSummary": "none",
                    },
                },
            },
        },
        "gpt-5-t": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "GPT-5 High",
            "options": {
                "baseURL": "http://localhost:8089/v1",
            },
            "models": {
                "gpt-5-codex": {
                    "name": "GPT-5 High",
                    "options": {
                        "reasoningEffort": "high",
                        "reasoningSummary": "none",
                    },
                },
            },
        },
        "gpt5-low": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "GPT-5 Low",
            "options": {
                "baseURL": "http://localhost:8089/v1",
            },
            "models": {
                "gpt-5-codex": {
                    "name": "GPT-5 Low",
                    "options": {
                        "reasoningEffort": "low",
                        "reasoningSummary": "none",
                    },
                },
            },
        },
    },
    "theme": "oat-latte",
    "autoupdate": true,
    "share": "manual",
    "permission": {
        "webfetch": "allow",
        "bash": {
            "*": "allow",
            "ls": "allow",
            "pwd": "allow",
            "cat": "allow",
            "grep": "allow",
            "find": "allow",
            "git status": "allow",
            "git diff": "allow",
            "git log": "allow",
            "git push": "ask",
            "git push --force": "deny",
            "rm -rf": "ask",
            "sudo *": "ask",
            "terraform *": "deny",
        },
    },
    "mcp": {
        "web-search-prime": {
            "type": "remote",
            "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
            "enabled": true,
            "headers": {
                "Authorization": "Bearer {env:ZAI_API_KEY}",
            },
        },
        "time": {
            "command": ["uvx", "mcp-server-time"],
            "type": "local",
        },
        "zai-mcp-server": {
            "type": "local",
            "command": ["npx", "-y", "@z_ai/mcp-server"],
            "enabled": true,
            "environment": {
                "Z_AI_API_KEY": "{env:ZAI_API_KEY}",
                "Z_AI_MODE": "ZAI",
            },
        },
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true,
            "headers": {
                "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
            },
        },
        "pampax": {
            "type": "local",
            "command": ["pampax", "mcp"],
            "enabled": false,
            "environment": {
                "OPENAI_BASE_URL": "http://192.168.1.216:1234/v1",
                "OPENAI_API_KEY": "lm-studio",
                "PAMPAX_OPENAI_EMBEDDING_MODEL": "text-embedding-embeddinggemma-300m-qat",
                "PAMPAX_EMBEDDING_DIMENSIONS": "768",
                "PAMPAX_MAX_TOKENS": "1024",
                "PAMPAX_RERANK_API_URL": "http://127.0.0.1:11437/v1/reranking",
                "PAMPAX_RERANK_API_KEY": "llama-cpp",
                "PAMPAX_RERANK_MODEL": "qwen3-reranker",
                "PAMPAX_RERANKER_MAX": "50",
                "PAMPAX_RERANKER_MAX_TOKENS": "512",
            },
        },
    },
    "instructions": [
        "AGENTS.md",
        ".opencode/prompts/*.md",
        ".opencode/command/*.md",
        ".opencode/agent/*.md",
        ".opencode/rules/*.md",
    ],
    "command": {
        "analyze-performance": {
            "template": ".opencode/command/analyze-performance.md",
        },
    },
    "formatter": {
        "prettier": { "disabled": false },
        "ruff": {
            "command": ["ruff", "format", "$FILE"],
            "extensions": [".py", ".pyi"],
        },
        "dart": {
            "command": ["dart", "format", "$FILE"],
            "extensions": [".dart"],
        },
    },
}
